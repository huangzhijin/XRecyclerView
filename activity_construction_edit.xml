<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.apps.qualityMng.QualityEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_header" />

        <ScrollView
            android:id="@+id/sv_quality_edit_aty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_page"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    style="@style/FromCardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_dp_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_dp_15">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_date"
                                />

                            <TextView
                                android:id="@+id/datevalue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_person"
                                />

                            <TextView
                                android:id="@+id/date_person"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />



                        <LinearLayout
                            android:id="@+id/zhuanye_layout"

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_zhuanye"
                                />

                            <TextView
                                android:id="@+id/zhuanye_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />
                        <LinearLayout
                            android:id="@+id/weather_layout"

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_weather"
                                />

                            <TextView
                                android:id="@+id/weather_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_jiju"
                                />

                            <EditText
                                android:id="@+id/jiju_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:background="#00000000"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_personcount"
                                />

                            <EditText
                                android:id="@+id/personcount_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:background="#00000000"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_qingkuang"
                                />

                            <EditText
                                android:id="@+id/qingkuang_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:singleLine="false"
                                android:maxLines="5"
                                android:background="#00000000"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_shebeiqingkuang"
                                />

                            <EditText
                                android:id="@+id/shebeiqingkuang_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:singleLine="false"
                                android:maxLines="5"
                                android:background="#00000000"
                                />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_pinggu"
                                />

                            <EditText
                                android:id="@+id/pinggu_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:singleLine="false"
                                android:maxLines="5"
                                android:background="#00000000"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_question"
                                />

                            <EditText
                                android:id="@+id/tiandao_question_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:singleLine="false"
                                android:maxLines="5"
                                android:background="#00000000"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/item_height"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_zhiliang"
                                />

                            <EditText
                                android:id="@+id/zhiliang_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:singleLine="false"
                                android:maxLines="5"
                                android:background="#00000000"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met"
                            android:layout_marginBottom="@dimen/dimen_dp_8"
                            />
                        <LinearLayout
                            android:id="@+id/layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="@dimen/dimen_dp_8"
                            android:layout_marginTop="@dimen/dimen_dp_8"

                            >
                            <TextView
                                android:layout_width="@dimen/name_width"
                                android:layout_height="wrap_content"
                                style="@style/MaterialEditTextCommonStyle"
                                android:text="@string/tiandao_list"
                                />

                            <RelativeLayout
                                android:id="@+id/add_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <ListView
                                    android:id="@+id/listview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></ListView>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyt_efs_roo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="@dimen/name_width"
                                    android:layout_height="wrap_content"
                                    style="@style/MaterialEditTextCommonStyle"
                                    android:text="@string/tiandao_list"
                                    />

                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:descendantFocusability="blocksDescendants">
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/li"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </android.support.v7.widget.RecyclerView>
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_px_1"
                            android:background="@color/bg_line_1px_met"
                            android:layout_marginBottom="@dimen/dimen_dp_8"
                            />
                        <!--附件-->
                        <LinearLayout
                            android:id="@id/lyt_efs_root"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dimen_dp_30"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:minWidth="@dimen/dimen_dp_100"
                                    android:text="@string/txt_efs" />

                                <ImageButton
                                    android:id="@id/btn_add_picture"
                                    android:layout_width="@dimen/dimen_dp_25"
                                    android:layout_height="@dimen/dimen_dp_25"
                                    android:layout_marginRight="@dimen/dimen_dp_10"
                                    android:background="@drawable/bg_efs_image"
                                    android:gravity="center"
                                    android:padding="0dp"
                                    android:text="@string/txt_picture"
                                    android:textColor="@color/colorPrimary" />

                                <ImageButton
                                    android:id="@id/btn_add_video"
                                    android:layout_width="@dimen/dimen_dp_25"
                                    android:layout_height="@dimen/dimen_dp_25"
                                    android:layout_marginRight="@dimen/dimen_dp_10"
                                    android:background="@drawable/bg_efs_video"
                                    android:gravity="center"
                                    android:padding="0dp"
                                    android:text="@string/txt_videos"
                                    android:textColor="@color/colorPrimary"
                                    tools:ignore="ContentDescription" />

                                <ImageButton
                                    android:id="@id/btn_add_document"
                                    android:layout_width="@dimen/dimen_dp_25"
                                    android:layout_height="@dimen/dimen_dp_25"
                                    android:layout_marginRight="@dimen/dimen_dp_10"
                                    android:background="@drawable/bg_efs_file"
                                    android:gravity="center"
                                    android:padding="0dp"
                                    android:text="@string/txt_document"
                                    android:textColor="@color/colorPrimary"
                                    tools:ignore="ContentDescription" />

                                <CheckBox
                                    android:id="@id/chb_toggle_grid_linear"
                                    android:layout_width="@dimen/dimen_dp_25"
                                    android:layout_height="@dimen/dimen_dp_25"
                                    android:layout_marginRight="@dimen/dimen_dp_5"
                                    android:background="@drawable/bg_chb_toggle_grid_linear"
                                    android:button="@null" />
                            </LinearLayout>


                            <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:descendantFocusability="blocksDescendants">
                            <android.support.v7.widget.RecyclerView
                                android:id="@id/rv_meidaList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </android.support.v7.widget.RecyclerView>
                            </RelativeLayout>
                        </LinearLayout>

                        <!--<include layout="@layout/include_medialist"/>-->
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/btn_save_quality_ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_dp_16"
                    android:background="@drawable/btn_common_submit"
                    android:text="@string/txt_submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_sp_18"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>